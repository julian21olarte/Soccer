header
	.container
		.row
			.col.s12
				h1.center {{title}}
				p.center.grey-text {{subtitle}}


section
	.container
		.row
			.col.s12.m12
				h5.center Listado de Arbitros
				table.table.bordered
					thead
						tr.teal-text.darken-3
							th Nombre
							th Pais
							th Posicion
					tbody
						tr.hoverable(ng-repeat="x in arbitros")
							td.text1.teal-text.darken-3 {{x.nombre}}
							td.grey-text.darken-2 {{x.pais}}
							td.grey-text.darken-2 {{x.posicion}}
							td
								a.btn-floating.btn.waves-effect.waves-light.red.darken-3(ng-click="remove(x)")
									i.material-icons remove
								
section
	.container
		.row
			h5.center Registro
			form.col.s12.m12.grey-text
				.row
					.input-field.col.s12.m6
						input#name(type="text", ng-model="nombre")
						label Nombre

					.input-field.col.s12.m6
						input#document(type="number", ng-model="documento")
						label Documento

				.row
					.input-field.col.s12.m6
						input#pais(type="text", ng-model="pais")
						label Pais

					.input-field.col.s12.m6
						select(ng-model="posSelected", material-select watch)
							option(ng-repeat="pos in positions") {{pos}}
						label Posicion

				.row
					.col.s12
						button.btn.waves-effect.waves-light.right(type="submit", name="registrarArbitro", ng-click="registrarArbitro()") Registrar



